<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oneFiles.DisplayOne">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/DisplayTitle"
        android:layout_width="253dp"
        android:layout_height="54dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="36dp"
        android:text="Title of the subtask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DisplayAmount"
        android:layout_width="94dp"
        android:layout_height="28dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="136dp"
        android:text="How many"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayTitle" />

    <ImageButton
        android:id="@+id/displayEditOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="48dp"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/DisplayBought"
        android:layout_width="59dp"
        android:layout_height="65dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/unchecked"
        app:layout_constraintStart_toEndOf="@+id/DisplayTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DisplayType"
        android:layout_width="84dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="128dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/descType"
        app:layout_constraintTop_toBottomOf="@+id/DisplayBought" />

    <TextView
        android:id="@+id/descAmount"
        android:layout_width="76dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="136dp"
        android:text="Amount is"
        android:textColor="#4B62F9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayTitle" />

    <TextView
        android:id="@+id/descType"
        android:layout_width="85dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="139dp"
        android:text="Dimension is"
        android:textColor="#4B62F9"
        app:layout_constraintStart_toEndOf="@+id/DisplayAmount"
        app:layout_constraintTop_toBottomOf="@+id/DisplayTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>